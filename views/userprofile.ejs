<link rel="stylesheet" href="/css/user_profile.css" type="text/css">

<div class="profile-grid">
  <div class="profile-image-item">
    <div class="card profile-img-card" style="width: 18rem;">
      <% if(profile_user && profile_user.avatar != undefined) { %>
        <img class="card-img-top" src="<%= profile_user.avatar %>" alt="Profile Pic">
      <% } else { %>
        <img class="card-img-top" src="/img/logoimg.png" alt="Profile Pic">
      <% } %>
      <div class="card-body">
        <% if(profile_user) { %>
          <h5 class="card-title">
            <%= profile_user.username %>
          </h5>
        <% } else { %>
          <h5 class="card-title">
            What the hell happened!
          </h5>
        <% } %>
      </div>
    </div>
    <% if(profile_user.id === locals.user.id) { %>
    <div class="friends-button-div">
      <a href="/friends">
        <button type="button" class="btn user-friends-button">Friends/Requests</button>
      </a>
    </div>
    <% } %>
  </div>
  <div class="profile-desc-item">
    <h3>Description</h3>
    <p>
      <% if(profile_user && profile_user.desc)  { %>
        <%= profile_user.desc %>
      <%} else { %>
        Please add a description...
      <% } %>
      
    </p>
  </div>
  <div class="profile-update-item">
    <% if(profile_user.id === locals.user.id) { %>
      <h4>Update Profile</h4>
      <form action="/update/<%= locals.user._id %>" method="POST" enctype="multipart/form-data">
        <div class="form-group mb-3">
          <label for="profile-image" class="mb-2">New profile image</label>
          <input type="file" class="form-control" name="avatar" id="profile-image">
        </div>
        <div class="form-group mb-3">
          <label for="profile-description" class="mb-2">New Description</label>
          <textarea class="form-control" id="profile-description" rows="3" name="description"></textarea>
        </div>
        <button class="btn btn-secondary btn-sm" type="submit">Upload</button>
      </form>
    <% } %>
  </div>
</div>

