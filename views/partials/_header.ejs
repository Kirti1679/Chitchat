<link rel="stylesheet" href="/css/header.css" type="text/css">

<nav class="navbar navbar-expand-md navbar-light bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand display-4" href="/" style="color: white;">ChitChat &nbsp;</a>
    <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse" data-bs-target=".navHeaderCollapse" aria-controls="navHeaderCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse m-auto navbar-nav navHeaderCollapse" id="navHeaderCollapse">
        <% if(locals.user) { %>
          <div class="navbar-nav my-auto messenger-div">
            <button type="button" class="btn btn-danger nav-item navbar-button messenger-button">
              <a href="/chatroom/<%= locals.user.id %>" style="color: white">Messenger</a>
            </button>
          </div>
        <% } %> 
        
        <form action="/search" class="m-auto navbar-nav search-box-div" method="GET">
          <input type="text" class="form-control search-box-input shadow-none form-group" name="searcheduser" placeholder="Search user" aria-label="Search user" aria-describedby="search-box-icon" required>
          <button type="submit" class="input-group-text search-box-icon" id="search-box-icon"><i class="fas fa-search"></i></button>
        </form>
        

        <div class="navbar-nav me-auto my-1 my-md-0 navbar-right-buttons"></div>
          <% if(locals.user) { %>
            <button type="button" class="btn btn-info nav-item navbar-button">
              <a href="/profile/<%= locals.user.id %>">Profile</a>
            </button>
            <button type="button" class="btn btn-light nav-item navbar-button">
              <a href="/logout">Logout</a> 
            </button>
          <% } else { %>
            <button type="button" class="btn btn-info nav-item navbar-button">
              <a href="/signup">Sign Up</a>
            </button>
            <button type="button" class="btn btn-light nav-item navbar-button">
              <a href="/signin">Login</a> 
            </button>
          <% } %>
      </div>
    </div>
  </div>
</nav>

<script src="/js/chatroom.js" type="text/javascript"></script>