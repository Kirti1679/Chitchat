<link rel="stylesheet" href="/css/signin.css" type="text/css">

<div class="sign-in-div">   
    <div class="sign-in-box animate__animated animate__zoomIn animate__faster">
        <form action="/createuser" method="POST" class="sign-in-form font-sourcesans">
            <div class="form-field form-header font-opensans">
               <h3><i class="fas fa-user-plus"></i>&nbsp; SIGN UP</h3>
            </div>
            <div class="form-field">
                <div><label for="name">Username:</label></div>
                <div><input type="text" id="name" name="username" placeholder="Your Name" required></div>
            </div>
            <div class="form-field">
                <div><label for="email">Email Id:</label></div>
                <div><input type="email" id="email" name="email" placeholder="abc@def.com" required></div>
            </div>
            <div class="form-field">
                <div><label for="password">Password:</label></div>
                <div><input type="password" id="password" name="password" required></div>
            </div>  
            <div class="form-field">
                <div><label for="confirm_password">Confirm Password:</label></div>
                <div><input type="password" id="confirm_password" name="confirm_pass" required></div>
            </div>    
            <div class="form-field form-field-button">
                <button type="submit" id="sign-in-button">Register</button>
            </div>
            <p class="form-bottom">
                Already have an account? &nbsp; <button class="link-button bttn-unite bttn-xs bttn-danger"><a href="/signin">Login</a></button>
            </p>        
        </form>
    </div>
</div>
